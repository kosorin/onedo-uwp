<view:BasePage x:Class="OneDo.View.Shell"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:converters="using:OneDo.Converters"
               xmlns:view="using:OneDo.View"
               DataContext="{Binding Shell, Source={StaticResource ViewModelLocator}}"
               mc:Ignorable="d">

    <SplitView Content="{x:Bind VM.MainFrame}"
               Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
               PaneBackground="Yellow"
               IsPaneOpen="{Binding IsOpen}"
               DisplayMode="CompactOverlay">
        <SplitView.Pane>
            <StackPanel>
                <Button Command="{x:Bind VM.NavigateToMainPageCommand}">Inbox</Button>
                <Button Command="{x:Bind VM.NavigateToAboutPageCommand}">About</Button>
            </StackPanel>
        </SplitView.Pane>
    </SplitView>
</view:BasePage>
