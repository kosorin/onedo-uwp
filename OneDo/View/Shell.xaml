<view:BasePage x:Class="OneDo.View.Shell"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
               xmlns:Interactions="using:Microsoft.Xaml.Interactions.Core"
               xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
               xmlns:view="using:OneDo.View"
               DataContext="{Binding Shell, Source={StaticResource ViewModelLocator}}"
               mc:Ignorable="d">

    <Interactivity:Interaction.Behaviors>
        <Interactions:EventTriggerBehavior EventName="Loaded">
            <Interactions:InvokeCommandAction Command="{x:Bind VM.LoadedCommand}"/>
        </Interactions:EventTriggerBehavior>
    </Interactivity:Interaction.Behaviors>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView Content="{x:Bind VM.MainFrame}" PaneBackground="Yellow" IsPaneOpen="True" DisplayMode="CompactInline">
            <SplitView.Pane>
                <StackPanel>
                    <Button Command="{x:Bind VM.NavigateToMainPageCommand}">Inbox</Button>
                    <Button Command="{x:Bind VM.NavigateToAboutPageCommand}">About</Button>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</view:BasePage>
