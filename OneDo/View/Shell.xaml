<view:BasePage x:Class="OneDo.View.Shell"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:view="using:OneDo.View"
               DataContext="{Binding Shell, Source={StaticResource ViewModelLocator}}"
               mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView Content="{x:Bind VM.MainFrame}" PaneBackground="Yellow" IsPaneOpen="True" DisplayMode="CompactInline">
            <SplitView.Pane>
                <StackPanel>
                    <Button Command="{x:Bind VM.NavigateMainPageCommand}">1</Button>
                    <Button Command="{x:Bind VM.NavigateMainPageCommand}">2</Button>
                    <Button Command="{x:Bind VM.NavigateMainPageCommand}">3</Button>
                    <Button Command="{x:Bind VM.NavigateMainPageCommand}">4</Button>
                    <Button Command="{x:Bind VM.NavigateMainPageCommand}">5</Button>
                    <Button Command="{x:Bind VM.NavigateMainPageCommand}">6</Button>
                    <Button Command="{x:Bind VM.NavigateMainPageCommand}">7</Button>
                    <Button Command="{x:Bind VM.NavigateMainPageCommand}">8</Button>
                    <Button Command="{x:Bind VM.NavigateMainPageCommand}">9</Button>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</view:BasePage>
