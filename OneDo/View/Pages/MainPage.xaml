<view:BasePage x:Class="OneDo.View.Pages.MainPage"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:view="using:OneDo.View"
               xmlns:model="using:OneDo.Model"
               xmlns:controls="using:OneDo.Controls"
               DataContext="{Binding MainPage, Source={StaticResource ViewModelLocator}}"
               mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <controls:HamburgerTitleBar Grid.Row="0"
                                    MenuButtonCommand="{x:Bind VM.Shell.TogglePaneCommand}"
                                    Title="Inbox">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource HamburgerTitleBarButtonStyle}">
                    <FontIcon FontSize="20" Glyph="&#xE71E;" />
                </Button>
            </StackPanel>
        </controls:HamburgerTitleBar>
    </Grid>
</view:BasePage>
