<views:PageBase x:Class="OneDo.Views.AboutPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:views="using:OneDo.Views"
                DataContext="{Binding AboutPage, Source={StaticResource ViewModelLocator}}"
                mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="24,12">
            <TextBlock Text="About" Style="{ThemeResource HeaderTextBlockStyle}" />
            <TextBlock Text="{x:Bind VM.VersionText}" />
        </StackPanel>
    </Grid>
</views:PageBase>
