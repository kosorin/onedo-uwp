<Application x:Class="OneDo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="using:OneDo.ViewModel"
             xmlns:converters="using:OneDo.Converters"
             RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <!--<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>-->

            <viewModel:ViewModelLocator x:Key="ViewModelLocator" />

            <converters:ChangeTypeConverter x:Key="ChangeTypeConverter" />
            <converters:StringFormatConverter x:Key="StringFormatConverter" />
            <converters:ConditionConverter x:Key="ConditionConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
